{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "module": "commonjs",
    "target": "ES2015",
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}